<div class="table-holder">
  <% @account.each do |account| %>
    <% total = 0 %>
    <h1 align='center'><%= link_to account.name, account_path(account.id) %></h1></br>
    <table class="table">
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Total</th>
      </tr>

      <% account.transactions.sort_by { |t| t.date  }.each do |t| %>
        <tr>
          <td><%= t.date %></td>
          <td><%= t.description %></td>
          <td><%= display_currency(t.amount) %></td>
          <td><%= display_currency(total += t.amount) %></td>
        </tr>
      <% end %>
    </table></br></br>
  <% end %>

</div>

<style media="screen">
  td {
    text-align: center;
  }
</style>
