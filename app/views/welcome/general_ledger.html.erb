<% @asset.each do |asset| %>
  <% total = 0 %>
  <h3 align='center'><%= asset.name %></h3>
  <table class="table">
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Total</th>
    </tr>
    
    <% asset.transactions.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.description %></td>
        <td><%= t.amount %></td>
        <td><%= total += t.amount %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<% @liability.each do |liability| %>
  <% total = 0 %>
