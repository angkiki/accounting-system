    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Total</th>
    </tr>

    <% liability.transactions.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.description %></td>
        <td><%= t.amount * -1 %></td>
        <td><%= total += (t.amount * -1) %></td>
      </tr>
    <% end %>
  </table>
<% end %>


