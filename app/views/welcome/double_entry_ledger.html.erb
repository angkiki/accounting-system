<div>
  <table class="table">
    <tr>
      <td>Date</td>
      <td>description</td>
      <td>Amount</td>
      <td>Account</td>
    </tr>

    <% @transactions.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.description %></td>
        <td><%= display_currency(t.amount) %></td>
        <td><%= Account.find(t.account_id).name %></td>
      </tr>
    <% end %>
  </table>
</div>
