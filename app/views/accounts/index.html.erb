<table class="table">
  <tr>
    <th>Name of Account</th>
    <th>Type</th>
    <th></th>
  </tr>

  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.name %></td>
      <td><%= account.type %></td>
      <td><%= link_to "Edit", edit_account_path(account.id), class: "btn btn-primary btn-sm" %></td>
    </tr>
  <% end %>
</table>
